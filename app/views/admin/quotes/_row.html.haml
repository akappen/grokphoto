%li{ :id => "row_#{row.id}" }
  .draggable{ :style => 'height: 120px' }
    %strong= truncate(row.author, :length => 20)
    = link_to image_tag('cancel.png'), resource_path(row), :class => "delete"
    %br
    = truncate("\"#{row.body}\"", :length => 110)
    
  .actions
    = link_to 'Edit', edit_resource_path(row)