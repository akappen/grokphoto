- if defined?(DEMO_MODE) and DEMO_MODE
  %p
    %strong 
      We're running in demo mode. For login information use: 
      %br
      client@grokphoto.org / password
      
- form_for @client_session, :url => client_client_session_path do |f|
  = f.error_messages
  %p
    = f.label :email
    = f.text_field :email, :class => 'text validate[required,custom[email]]'
  %p
    = f.label :password
    = f.password_field :password, :class => 'text validate[required,length[5,20]]'
  %p
    = f.label :remember_me, 'Remember me when I come back'
    = f.check_box :remember_me
  %p
    - if request.env['HTTP_USER_AGENT'].include?('MSIE 6')
      = f.submit 'Login'
    - else
      %button.blue
        %span Login &raquo;
    &nbsp;
    = link_to 'Did you forget your password?', new_client_client_password_reset_path, :rel => 'colorbox'
