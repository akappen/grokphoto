%h1= link_to @config.company_name, root_path
%ul
  %li
    = link_to 'Galleries', galleries_path
  - for page in @pages
    %li
      = link_to h(page.title), page_path(page)
  - unless @config.blog_url.blank?
    %li
      = link_to 'Blog', @config.blog_url
  %li
    = link_to 'Client Login &raquo;', client_login_path