#header
  %h1
    = link_to @config.company_name, root_path
  %ul.nav
    %li
      = link_to 'Galleries', galleries_path, :class => "#{'active' if controller.controller_name == 'galleries'}"
    - for page in @pages
      %li
        = link_to h(page.title), page_path(page), :class => "#{'active' if @page and @page.id == page.id}"
    - unless @config.blog_url.blank?
      %li
        = link_to 'Blog', @config.blog_url
    %li.last
      = link_to 'Client Login &raquo;', client_login_path